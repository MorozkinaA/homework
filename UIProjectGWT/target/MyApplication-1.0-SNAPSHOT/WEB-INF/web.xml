<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ReadFileServiceImpl</servlet-name>
        <servlet-class>com.netcracker.server.services.ReadFileServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadFileServiceImpl</servlet-name>
        <url-pattern>/MyApplication/readFile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WriteFileServiceImpl</servlet-name>
        <servlet-class>com.netcracker.server.services.WriteFileServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WriteFileServiceImpl</servlet-name>
        <url-pattern>/MyApplication/writeFile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SortServiceImpl</servlet-name>
        <servlet-class>com.netcracker.server.services.SortServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SortServiceImpl</servlet-name>
        <url-pattern>/MyApplication/sortTable</url-pattern>
    </servlet-mapping>

</web-app>